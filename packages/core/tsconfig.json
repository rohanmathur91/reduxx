{
  "compilerOptions": {
    "declaration": true, // Generate .d.ts files
    "module": "esnext",
    "rootDir": "./src", // Input directory
    "outDir": "./dist/umd",
    "target": "esnext",
    "lib": ["ESNext", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "bundler"
  },
  "include": ["src/index.ts"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
