{
  "name": "reduxx-core",
  "version": "1.0.5",
  "description": "Minimal redux implementation",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "unpkg": "./dist/umd/index.min.js",
  "jsdelivr": "./dist/umd/index.min.js",
  "exports": {
    ".": {
      "import": {
        "default": "./dist/esm/index.js",
        "types": "./dist/esm/index.d.ts"
      },
      "require": {
        "default": "./dist/cjs/index.js",
        "types": "./dist/cjs/index.d.ts"
      }
    }
  },
  "scripts": {
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "build": "pnpm run clean && pnpm run build:all",
    "build:all": "rollup -c --bundleConfigAsCjs",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:umd": "rollup -c rollup.config.js",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist",
    "prepublishOnly": "pnpm run build"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts",
    "README.md"
  ],
  "keywords": [
    "redux",
    "state-management"
  ],
  "author": "Rohan Mathur <mathurrohan04@gmail.com>",
  "homepage": "https://github.com/rohanmathur91/reduxx",
  "license": "ISC",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/lodash.clonedeep": "^4.5.9",
    "jsdom": "^26.1.0",
    "prettier": "^3.0.2",
    "vite": "^4.4.9",
    "vitest": "^0.34.3"
  },
  "dependencies": {
    "lodash.clonedeep": "^4.5.0",
    "tslib": "^2.8.1"
  }
}
