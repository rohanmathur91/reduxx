{
  "name": "@reduxx/core",
  "version": "1.0.0",
  "description": "Minimal redux implementation",
  "type": "module",
  "main": "./dist/cjs/core.js",
  "module": "./dist/esm/core.js",
  "types": "./dist/esm/core.d.ts",
  "unpkg": "./dist/umd/core.min.js",
  "jsdelivr": "./dist/umd/core.min.js",
  "exports": {
    ".": {
      "import": {
        "default": "./dist/esm/core.js",
        "types": "./dist/esm/core.d.ts"
      },
      "require": {
        "default": "./dist/cjs/core.js",
        "types": "./dist/cjs/core.d.ts"
      }
    }
  },
  "scripts": {
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "build": "pnpm run clean && pnpm run build:all",
    "build:all": "rollup -c --bundleConfigAsCjs",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:umd": "rollup -c rollup.config.js",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist",
    "prepublishOnly": "pnpm run build"
  },
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts"
  ],
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/lodash": "^4.17.20",
    "jsdom": "^26.1.0",
    "lodash": "^4.17.21",
    "prettier": "^3.0.2",
    "rollup-plugin-terser": "^7.0.2",
    "tslib": "^2.8.1",
    "vite": "^4.4.9",
    "vitest": "^0.34.3"
  }
}
